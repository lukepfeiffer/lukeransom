%div 
  %h2
    Project
  = form_for(@project) do |f|
    = f.text_field :project_title, placeholder: 'Project Title', class: 'field'
    = f.text_area :description, placeholder: 'Project Description', class: 'area'
    = f.text_field :github_url, placeholder: 'GitHub Url', class: 'field'
    = f.text_field :project_url, placeholder: 'Project Url', class: 'field'
    = f.submit 'Submit', class: 'submit'
